{
  "name": "huaer-template-miniprogram",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "npm run dev",
    "dev": "gulp dev",
    "build": "gulp build",
    "upload": "node ./scripts/upload.js",
    "upload:auto": "node ./scripts/upload-auto.js",
    "prettier": "prettier --write .",
    "lint": "eslint src --no-fix --max-warnings 0",
    "lint:fix": "eslint src --fix",
    "lint:style": "stylelint \"**/*.{css,less,scss,postcss}\" --no-fix --max-warnings 0",
    "lint:style:fix": "stylelint \"**/*.{css,less,scss,postcss}\" --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": [
      "npm run prettier",
      "git add ."
    ],
    "*.{js,jsx,ts,tsx}": [
      "npm run prettier",
      "npm run lint:fix",
      "git add ."
    ],
    "*.{css,scss,less}": [
      "npm run prettier",
      "npm run lint:style:fix",
      "git add ."
    ]
  },
  "dependencies": {
    "@vant/weapp": "^1.10.3",
    "async-validator": "^3.5.2",
    "dayjs": "^1.11.2",
    "miniprogram-computed": "^4.3.8",
    "qs": "^5.2.1",
    "wxministore": "^1.3.1"
  },
  "devDependencies": {
    "del": "^6.0.0",
    "eslint": "^7.32.0",
    "eslint-config-huaer": "^1.0.3",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "gulp": "^4.0.2",
    "gulp-cache": "^1.1.3",
    "gulp-changed": "^4.0.2",
    "gulp-if": "^3.0.0",
    "gulp-less": "^4.0.1",
    "gulp-mp-npm": "^1.9.5",
    "gulp-px2rpx": "^0.2.2",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "gulp-wechat-weapp-src-alisa": "^1.0.4",
    "husky": "^4.3.8",
    "inquirer": "^8.1.0",
    "jsonfile": "^6.1.0",
    "lint-staged": "^12.4.2",
    "miniprogram-ci": "^1.2.3",
    "node-sass": "^4.13.0",
    "prettier": "^2.6.2",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^5.0.0"
  }
}
